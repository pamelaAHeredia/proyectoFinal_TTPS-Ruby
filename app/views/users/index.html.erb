<div class="container">
    <h1 class="display-4 text-center">Todos los Usuarios</h1>

    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Usuario</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <%- @users.each do |user| %>
        <tbody>  
            <tr>
                <th><%= user.id %></th>
                <td><%= user.username %></td>
                <td> <%= user.email %></td>
                <td> <%= user.roles.pluck(:name)[0] %> </td>
                <td>
                    <div class="dropdown">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            ver Acciones
                        </a>

                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item"><%= link_to 'Ver usuario', user_path(user) %></a></li>
                            <li><a class="dropdown-item"><%= link_to 'Editar', edit_user_path(user) %></a></li>
                            <li><a class="dropdown-item"><%= button_to 'Eliminar', user, method: :delete %></a></li>
                        </ul>
                    </div>       
                </td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
            <% end %>
    </table>

</div>

