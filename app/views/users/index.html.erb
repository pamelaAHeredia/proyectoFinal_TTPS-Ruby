<div class="container">
    <h1 class="display-4 text-center">Todos los Usuarios</h1>

    <% if @users %>    
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Email</th>
                <% if !@current_user.customer?%>
                <th>Rol</th>
                <% if !@current_user.bank_staff?%>
                <th>Sucursal</th>
                <% end %>
                <th>Acciones</th>
                <% end %>
            </tr>
        </thead>
        <%- @users.each do |user| %>
        <tbody>  
            <tr>
                <td><%= user.username %></td>
                <td> <%= user.email %></td>
                <% if !@current_user.customer?%>
                <td> <%= Role.roles[user.roles.pluck(:name)[0]] %> </td>
                <% if !@current_user.bank_staff?%>
                <td> <%= user.branch_name if !user.branch_id.blank? %></td>
                <% end %>
                <td>
                    <div class="dropdown">
                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            ver Acciones
                        </a>

                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item"><%= link_to 'Ver usuario', user_path(user) %></a></li>
                            <% if @current_user.admin? %>
                            <li><a class="dropdown-item"><%= link_to 'Editar', edit_user_path(user) %></a></li>
                            <li><a class="dropdown-item"><%= link_to 'Eliminar', user, method: :delete, data: { confirm: 'EstÃ¡s seguro de que deseas eliminarlo?'} %></a></li>
                            <% end %>
                        </ul>
                    </div>       
                </td>
                <% end %>
            </tr>
        </tbody>
        <% end %>
    </table>
    <% else %>
    <h3>No hay usuarios para mostrar</h3>
    <% end %>
<div><%= link_to 'volver', home_index_path %></div>
</div>
