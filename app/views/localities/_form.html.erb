<div class="form-group">
  <%= form_with model: @locality do |f| %>
    <% if @locality.errors.any? %>
      <% @locality.errors.full_messages.each do |error| %>
        <div>
          <% error %>
        </div>
      <% end %>
    <% end %>
    <div>
      <%= f.label :nombre %><br>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
    <div>
      <%= f.label :provincia %>
      <%= f.select :province,
                options_for_select(get_provinces, @locality.province) %>
    </div>
    <div>
      <%= f.submit 'Guardar', :class => 'btn btn-success' %>
    </div>
  <% end %>
</div>
