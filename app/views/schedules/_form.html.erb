<div class="form-group">
  <%= form_for :schedule, :url => branch_schedule_url(@schedule.branch.id), :method => :patch do |f| %>
    <% @schedule.errors.full_messages.each do |error| %>
      <div>
        <% error %>
      </div>
    <% end %>
    <div>
      <%= f.label :day, 'DÃ­a: ' %>
      <%= f.select :day,
                options_for_select(get_available_days, @schedule.day) %>
    </div>
    <div>
      <%= f.label :start_time, 'Horario de Apertura: ' %>
      <%= f.time_select :start_time, required: true %>
    </div>
    <div>
      <%= f.label :end_time, 'Horario de cierre: ' %>
      <%= f.time_select :end_time, required: true %>
    </div>
    <div>
      <p>Sucursal: <%= @schedule.branch.name %></p>
    </div>
    <div>
      <%= f.submit 'Guardar', :class => 'btn btn-success' %>
    </div>
  <% end %>
</div>
