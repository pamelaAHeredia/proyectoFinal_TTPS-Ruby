<div class="container">
  <h1 class="display-3 text-center">Datos del horario</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">DÃ­a de la semana</th>
        <th scope="col">Hora de inicio</th>
        <th scope="col">Hora de fin</th>
        <th scope="col">Sucursal</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th><%= @schedule.id %></th>
        <td><%= Schedule.days[@schedule.day] %></td>
        <td><%= @schedule.start_time.strftime("%k:%M") %></td>
        <td><%= @schedule.end_time.strftime("%k:%M") %></td>
        <td><%= @schedule.branch.name %></td>
        <td>
          <div class="dropdown">
            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              ver Acciones
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item"><%= link_to 'Editar', edit_schedule_path(@schedule) %></a></li>
              <li><a class="dropdown-item"><%= button_to 'Eliminar', @schedule, method: :delete %></a></li>
            </ul>
          </div>
        </td>
      </tr>
    </tbody>
  </table>
  <div><%= link_to t('common.back'), schedules_path %></div>
</div>
