<div class="form-group col-md-6">
  <%= form_for @user do |f| %>
    <% @user.errors.full_messages.each do |error| %>
      <div>
        <% error %>
      </div>
    <% end %>
    <div class='my-2'>
      <%= f.label :username %><br>
      <%= f.text_field :username, class: 'form-control', required: true %>
    </div>
    <div class='my-2'>
      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control', required: true %>
    </div >
    <% if @current_user&.admin? %>
      <div class='my-2'>
        <%= f.label :role %><br>
        <%= f.select :roles, 
            options_for_select(get_roles, params[:roles]) %>
      </div>
      <div class='my-2'>
        <%= f.label :Sucursal, 'Sucursal (SÃ³lo para usuarios con rol Personal Bancario)' %><br>
        <%= f.collection_select :branch_id, Branch.all.order(name: :asc), :id, :name %>
      </div>
    <% else %>
      <div class='my-2'>
        <%= f.label :password %><br>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>
    <% end %>
    <div class='my-2'>
      <%= f.submit 'Crear', :class => 'btn btn-success' %>
    </div>
  <% end %>
</div>
