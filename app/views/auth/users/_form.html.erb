<div class="form-group">
  <%= form_for @user do |f| %>
    <% @user.errors.full_messages.each do |error| %>
      <div>
        <% error %>
      </div>
    <% end %>
    <div>
      <%= f.label :username %><br>
      <%= f.text_field :username, class: 'form-control', required: true %>
    </div>
    <div>
      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control', required: true %>
    </div>
    <% if Current.user&.has_role? :admin %>
      <div>
        <%= f.label :role %><br>
        <%= f.select :roles, 
            options_for_select(get_roles, params[:roles]) %>
      </div>
      <div>
        <p>*La sucursal es s√≥lo para los usuarios con rol "personal bancario"</p>
        <%= f.label :Sucursal %><br>
        <%= f.collection_select :branch_id, Branch.all.order(name: :asc), :id, :name %>
      </div>
    <% else %>
      <div>
        <%= f.label :password %><br>
        <%= f.password_field :password, class: 'form-control', required: true %>
      </div>
    <% end %>
    <div>
      <%= f.submit 'Crear', :class => 'btn btn-success' %>
    </div>
  <% end %>
</div>
