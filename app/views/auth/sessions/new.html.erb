<div class= "container">
  <div class="row col-6 my-3">
    <h1>Iniciar Sesi√≥n</h1>
    <div class="form-group">
      <%= form_with(url: sessions_path) do |f| %>
        <div class="my-2">
          <%= f.label :username %><br>
          <%= f.text_field :username, class: 'form-control', required: true  %>
        </div>
        <div class="my-2">
          <%= f.label :password %><br>
          <%= f.password_field :password, class: 'form-control', required: true  %>
        </div>
        <div class="my-2">
          <%= f.submit 'Login', :class => 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
